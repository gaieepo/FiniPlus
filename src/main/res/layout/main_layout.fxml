<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.MainController">
   <center>
      <ListView fx:id="tasks" prefHeight="200.0" prefWidth="200.0" />
   </center>
   <left>
      <Label fx:id="toast" text="Label" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding></Label>
   </left>
   <bottom>
      <TextField fx:id="command" onKeyPressed="#keyListener" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
